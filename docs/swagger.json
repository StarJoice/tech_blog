{
    "swagger": "2.0",
    "info": {
        "contact": {}
    },
    "paths": {
        "/login": {
            "post": {
                "description": "用户通过邮箱和密码登录，如果成功，则生成会话（Session）",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "user"
                ],
                "summary": "用户登录",
                "parameters": [
                    {
                        "description": "登录请求",
                        "name": "req",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/web.loginReq"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "登录成功\"  // 使用手动描述的 web.Result 类型",
                        "schema": {
                            "$ref": "#/definitions/web.Result"
                        }
                    },
                    "400": {
                        "description": "邮箱或密码错误",
                        "schema": {
                            "$ref": "#/definitions/web.Result"
                        }
                    },
                    "500": {
                        "description": "系统错误",
                        "schema": {
                            "$ref": "#/definitions/web.Result"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "web.Result": {
            "description": "该结构体描述了 API 请求的返回格式",
            "type": "object",
            "properties": {
                "code": {
                    "type": "integer"
                },
                "data": {},
                "msg": {
                    "type": "string"
                }
            }
        },
        "web.loginReq": {
            "type": "object",
            "required": [
                "email",
                "password"
            ],
            "properties": {
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        }
    }
}